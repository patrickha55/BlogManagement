@model BlogManagement.Common.Models.TagVMs.TagEditVM

@{
    ViewData["Title"] = "Edit a Tag";
    Layout = "Admin/_Layout";
}

<h1>Edit a Tag</h1>

<form asp-controller="Tags" asp-action="Edit" method="post">
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input type="text" class="form-control" placeholder="Enter tag title" asp-for="Title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MetaTitle"></label>
            <input type="text" class="form-control" placeholder="Enter meta title" asp-for="MetaTitle">
            <span asp-validation-for="MetaTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Slug"></label>
            <input type="text" class="form-control" placeholder="Enter slug" asp-for="Slug">
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Context"></label>
            <textarea class="form-control" asp-for="Context"></textarea>
            <span asp-validation-for="Context" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>